<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gavin.superrefreshlayout.MainActivity">

    <TextView
        android:id="@+id/recycler_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="RecyclerView Refresh Demo"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#ff0000"
        />

    <TextView
        android:id="@+id/list_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ListView Refresh Demo"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/nested_scroll_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NestedScrollView Refresh Demo"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:layout_marginTop="200dp"
        />


    <TextView
        android:id="@+id/scroll_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ScrollView Refresh Demo"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:layout_marginTop="300dp"
        />

    <TextView
        android:id="@+id/normal_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NormalView Refresh Demo"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:layout_marginTop="400dp"
        />

</RelativeLayout>
